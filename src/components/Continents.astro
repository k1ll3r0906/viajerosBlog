---
const { name } = Astro.props;
const { img } = Astro.props;
const { url } = Astro.props;
---

<div class="flex flex-col object-center items-center text-center m-10">
    <a href={url} class="transition-transform duration-300 ease-in-out hover:scale-110">
        <img src={img} class="w-42 h-42 object-cover object-center rounded-3xl shadow items-center mb-2 border border-[#02989e] transition-all duration-300 ease-out transform hover:-translate-y-3 hover:border-[#10616a]"/>
        <p class="text-[#21848f] text-2xl font-bold">{name}</h2>
    </a>
</div>
