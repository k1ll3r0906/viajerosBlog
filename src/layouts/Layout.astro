---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Viajeros Blog</title>
	</head>

	<body class="min-h-screen flex flex-col">
		<header class="bg-[#2accc1] relative z-50">
			<nav class="max-w-7xl mx-auto px-6">
				<ul class="flex items-center object-center justify-center text-center h-16 gap-8">
					<Header name="Inicio" url="/" />
					<Header name="Destinos" items={[
						{ label: "Europa", url: "/destinations/europeCont/europe",},
						{ label: "América", url: "/destinations/americaCont/america" },
						{ label: "Asia", url: "/destinations/asia" },
						{ label: "Oceanía", url: "/destinations/oceania" },
						{ label: "Afríca", url: "/destinations/africa" },
					]}/>
					<Header name="Viajes en grupo" items={[
						{ label: "Viaje a Laponia", url: "/trips/laponia" },
						{ label: "Viaje a Canadá", url: "/trips/canada" },
					]}/>
					<Header name="Emigrar al extranjero" items={[
						{ label: "Emigrar a EEUU", url: "/destinations/americaCont/eeuu" },
						{ label: "Emigrar a Australia", url: "/" },
					]}/>
					<Header name="Diseño de viajes a medida" url="#" />
					<Header name="Blog" url="#" />
				</ul>
			</nav>
		</header>
		<main class="grow">
			<slot />
		</main>
		<Footer />
	</body>

	<style>
		html,
		body {
			margin: 0;
			width: 100%;
			height: 100%;
		}
	</style>
</html>
